<article class="post">
  <div class="title">
    {{!-- <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{format_url post_url}})</span> --}}
    <h3 class="post_title">{{title}}</h3>
    <p class="content">{{post_content}}</p>

  </div>
<div class="meta">
  by {{user.username}} on {{format_date created_at}}
  |
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>